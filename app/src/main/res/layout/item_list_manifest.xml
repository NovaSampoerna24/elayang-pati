<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textViewDeskripsi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="POSTING LOKET" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewJam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/shape_chip_green"
            android:text="16:03:39"
            android:textColor="@color/colorWhite"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/textViewTgl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/shape_chip_blue"
            android:text="2018-06-09"
            android:textColor="@color/colorWhite"
            android:textSize="8sp" />


    </LinearLayout>


</LinearLayout>
