<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerDetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="app.patikab.elayang.DetailKonsepActivity"
    tools:showIn="@layout/activity_detail_konsep">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearPembuat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:text="Pembuat Konsep "
                    android:textColor="@color/colorAccent" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewPembuat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewJabatanPembuat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearTujuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:text="Tujuan "
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/textViewTujuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:text="Nomor Surat "
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/textViewNoSurat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:text="Nomor Agenda "
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/textViewNoAgenda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Surat "
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/textViewTglSurat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:text="Status "
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/textViewStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/shape_chip_green"
                    android:text="Biasa"
                    android:textColor="@color/colorWhite"
                    android:textSize="11sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:text="Perihal "
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/textViewPerihal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/showMore1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_chip_blue_outline"
                android:text="Show More"
                android:textColor="@color/colorAccent"
                android:visibility="gone" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="8dp"
                    android:text="Ringkasan "
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/textViewRingakas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:textIsSelectable="true" />

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="8dp"
                    android:text="Isi Surat "
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/textViewIsi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="3" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:text="Tembusan "
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/textViewTembusan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:text="Pemeriksa "
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/textViewPemeriksa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:visibility="gone" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerViewPemeriksa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kaitan Surat Masuk "
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/textViewKaitanSurat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />

            </LinearLayout>


            <TextView
                android:id="@+id/showMore2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_chip_blue_outline"
                android:text="Show More"
                android:textColor="@color/colorAccent" />


        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="4dp"
                android:paddingTop="4dp">

                <TextView
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:text="Klasifikasi "
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/textViewKlasifikasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="Umum"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="4dp"
                android:paddingTop="4dp">

                <TextView
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:text="Sifat "
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/textViewKecepatan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/shape_chip_green"
                    android:text="Biasa"
                    android:textColor="@color/colorWhite"
                    android:textSize="11sp" />

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="4dp"
                android:paddingTop="4dp">

                <TextView
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:text="Keamanan "
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/textViewKeamanan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/shape_chip_green"
                    android:text="Biasa"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="11sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:text="Pindaian "
                    android:textColor="@color/colorAccent" />

                <ImageView
                    android:id="@+id/textViewPindaian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=".pdf"
                    app:srcCompat="@drawable/ic_find_in_page_blue_24dp"/>

            </LinearLayout>

            <!--<TextView-->
            <!--bimtek:id="@+id/showMore3"-->
            <!--bimtek:layout_width="wrap_content"-->
            <!--bimtek:layout_height="wrap_content"-->
            <!--bimtek:layout_gravity="center"-->
            <!--bimtek:layout_marginTop="16dp"-->
            <!--bimtek:textColor="@color/colorAccent"-->
            <!--bimtek:background="@drawable/shape_chip_blue_outline"-->
            <!--bimtek:text="Show More" />-->


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
