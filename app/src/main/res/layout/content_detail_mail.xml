    <android.support.v7.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:text="Nomor Surat "
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/textViewNoSurat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:text="Nomor Agenda "
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/textViewNoAgenda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Surat "
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/textViewTglSurat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Terima "
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/textViewTglTerima"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:text="Perihal "
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/textViewPerihal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:text="Klasifikasi "
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/textViewKlasifikasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearPengirim"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:text="Pengirim "
                    android:textColor="@color/colorAccent" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewPengirim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Andreas"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewJabatanPengirim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kepala SATUAN POLISI PAMONG PRAJA" />

                    <TextView
                        android:id="@+id/textViewAlamatPengirim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jl Werkudoro No 1 PATI" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearPenerima"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:text="Penerima "
                    android:textColor="@color/colorAccent" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewPenerima"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="INDRIYANTO SH, M.Si"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewInstansi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KEPALA DINAS KOMUNIKASI DAN INFORMATIKA" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/showMore1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_chip_blue_outline"
                android:text="Show More"
                android:textColor="@color/colorAccent" />


        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:visibility="gone"
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="8dp"
                    android:text="Ringkasan "
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/textViewRingakas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:textIsSelectable="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="8dp"
                    android:text="Isi Surat "
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/textViewIsi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="3" />

            </LinearLayout>


            <TextView
                android:id="@+id/showMore2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_chip_blue_outline"
                android:text="Show More"
                android:textColor="@color/colorAccent" />


        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="4dp"
                android:paddingTop="4dp">

                <TextView
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:text="Pelaksana Harian "
                    android:textColor="@color/colorAccent" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewPelaksana"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- "
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewJabatanPelaksana"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- " />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="4dp"
                android:paddingTop="4dp">

                <TextView
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:text="Tembusan "
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/textViewTembusan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- " />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="4dp"
                android:paddingTop="4dp">

                <TextView
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:text="Kecepatan "
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/textViewKecepatan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/shape_chip_green"
                    android:text="Biasa"
                    android:textColor="@color/colorWhite"
                    android:textSize="11sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="4dp"
                android:paddingTop="4dp">

                <TextView
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:text="Keamanan "
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/textViewKeamanan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/shape_chip_green"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="11sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:text="Pindaian "
                    android:textColor="@color/colorAccent" />

                <ImageView
                    android:id="@+id/textViewPindaian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(.pdf)"
                    app:srcCompat="@drawable/ic_find_in_page_blue_24dp" />

            </LinearLayout>

            <!--<TextView-->
            <!--bimtek:id="@+id/showMore3"-->
            <!--bimtek:layout_width="wrap_content"-->
            <!--bimtek:layout_height="wrap_content"-->
            <!--bimtek:layout_gravity="center"-->
            <!--bimtek:layout_marginTop="16dp"-->
            <!--bimtek:textColor="@color/colorAccent"-->
            <!--bimtek:background="@drawable/shape_chip_blue_outline"-->
            <!--bimtek:text="Show More" />-->


        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Riwayat Disposisi"
                android:textColor="@color/colorAccent" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerViewDispo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>
